<?xml version="1.0" encoding="UTF-8"?>
<dda>

    <!-- id 是 值针对 jdbc 驱动的 虚数据库名称  -->
    <dataSource id="pb_account">
        <!-- 初始连接数 -->
        <property name="initconn">1</property>
        <!-- 最大连接数 -->
        <property name="maxconn">60</property>
        <!--  后端链接空闲时间 单位秒 -->
        <property name="idletimeout">300</property>
        <!-- 后端对应的mysql数据库连接 -->
        <property name="location">
            <location>127.0.0.1:3306:pb_account:root:ilxw</location>
            <location>127.0.0.1:3306:pb_account1:root:ilxw</location>
        </property>
        <!-- 分区关键字 -->
        <property name="keyname">name</property>
    </dataSource>

</dda>
